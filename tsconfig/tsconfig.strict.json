{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Maximum Strict TypeScript Configuration",
  "compilerOptions": {
    "// === BASELINE STRICT ===": "All options implied by strict: true",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "// === BEYOND STRICT (2025 Best Practices) ===": "Additional type safety",
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": true,

    "// === MODULE RESOLUTION (Bundler-based projects) ===": "Use ESNext + bundler for app code",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    "// === OUTPUT ===": "Standard output configuration",
    "target": "ES2022",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true
  }
}
