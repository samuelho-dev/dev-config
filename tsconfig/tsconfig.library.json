{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Library Configuration (for npm publishing)",
  "extends": "./tsconfig.strict.json",
  "compilerOptions": {
    "// === LIBRARY-SPECIFIC ===": "For packages published to npm",
    "// NOTE: Libraries use NodeNext for maximum compatibility": "",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "// === OUTPUT ===": "Standard library output",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",

    "// === MONOREPO SUPPORT ===": "",
    "composite": true,
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
