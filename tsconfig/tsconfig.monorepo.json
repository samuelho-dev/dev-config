{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Monorepo Base Configuration",
  "extends": "./tsconfig.strict.json",
  "compilerOptions": {
    "// === MONOREPO-SPECIFIC ===": "Project references and incremental builds",
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",

    "// === PATH RESOLUTION ===": "Override in project tsconfig",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {}
  },
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    ".next",
    "build",
    "*.tsbuildinfo"
  ]
}
