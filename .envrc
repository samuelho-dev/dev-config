#!/usr/bin/env bash
# Direnv configuration for dev-config
# Automatically loads Nix development environment

# Use Nix flake for development environment
use flake

# Watch these files for changes to reload environment
watch_file flake.nix
watch_file flake.lock

# Load local environment overrides (gitignored)
# Create .envrc.local for machine-specific environment variables
if [ -f .envrc.local ]; then
  echo "Loading local environment from .envrc.local"
  source_env .envrc.local
fi
