language js

// Ban the TypeScript 'satisfies' operator
// Prefer proper type annotations or Schema.decodeUnknown for type narrowing
`$expr satisfies $type` where {
  register_diagnostic(
    span = $expr,
    message = "Do not use 'satisfies' operator. Use proper type annotations or Schema.decodeUnknown for type narrowing.",
    severity = "error"
  )
}
