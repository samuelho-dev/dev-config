language json

// Enforce strict TypeScript compiler options in tsconfig.json
// Projects should have strict: true and other safety options
`{ "compilerOptions": { $opts } }` where {
  // Check for missing strict option
  not ($opts <: contains `"strict": true`),
  register_diagnostic(
    span = $opts,
    message = "tsconfig.json should have '\"strict\": true' for type safety.",
    severity = "error"
  )
}
