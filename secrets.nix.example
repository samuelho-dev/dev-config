# Machine-Specific Secrets Template
#
# IMPORTANT: This is a TEMPLATE file. DO NOT commit the actual secrets.nix!
#
# Setup Instructions:
# 1. Copy this file to ~/.config/home-manager/secrets.nix
# 2. Fill in your actual values
# 3. The actual secrets.nix is gitignored and will NOT be committed
#
# Usage:
#   cp secrets.nix.example ~/.config/home-manager/secrets.nix
#   nvim ~/.config/home-manager/secrets.nix  # Edit with your values
#
# This file is imported by flake.nix to configure Git and SSH settings
# without committing personal information or SSH keys to the repository.

{
  #
  # Git Configuration
  #

  # Your Git identity (used for commits)
  gitUserName = "Your Name";
  gitUserEmail = "your-email@example.com";

  #
  # SSH Configuration
  #

  # Your SSH public key from 1Password (for commit signing)
  #
  # How to get this:
  # 1. Open 1Password
  # 2. Find your GitHub SSH Key item
  # 3. Copy the PUBLIC key (not private!)
  # 4. Paste below
  #
  # OR using 1Password CLI:
  #   op read "op://Dev/GitHub SSH Key/public key"
  #
  # Example format:
  #   "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIExamplePublicKeyHere... your-email@example.com"
  sshSigningKey = "ssh-ed25519 AAAAC3... your-email@example.com";

  #
  # NPM Configuration
  #

  # NPM authentication token for registry.npmjs.org
  #
  # How to get this:
  # 1. Log in to https://www.npmjs.com
  # 2. Go to Settings → Access Tokens
  # 3. Create a new token with "Automation" or "Publish" type
  # 4. Copy the token and paste below
  #
  # OR reference from 1Password:
  #   "op://Dev/npm.js/ACCESS_TOKEN"
  #
  # Example format:
  #   "npm_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
  npmToken = "npm_xxxxxx...";

  # GitHub Packages authentication token (Personal Access Token)
  #
  # How to get this:
  # 1. Go to GitHub → Settings → Developer settings → Personal access tokens → Tokens (classic)
  # 2. Create a token with scopes: repo, write:packages, read:packages
  # 3. Copy the token and paste below
  #
  # OR reference from 1Password:
  #   "op://Dev/Github/GITHUB_PACKAGES_TOKEN"
  #
  # Example format:
  #   "ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
  githubPackagesToken = "ghp_xxxxxx...";

  #
  # Optional: Additional Configuration
  #

  # Add any other machine-specific secrets here
  # These can be referenced in your Home Manager modules
}
